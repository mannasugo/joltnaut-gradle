<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
    </style>

    <style name="splash">
        <item name="android:windowBackground">#000</item>
    </style>

    <style name="avatar">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

    </style>

    <style name="holds">
        <item name="android:fontFamily">@font/v202201311917___litera___basic</item>
        <item name="android:textSize">23px</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textFontWeight" tools:targetApi="p">600</item>
        <item name="android:letterSpacing">.15</item>
    </style>

    <style name="quo">
        <item name="android:paddingHorizontal">3px</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/v202201311917___litera___basic</item>
        <item name="android:textSize">19px</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textFontWeight" tools:targetApi="p">600</item>
        <item name="android:letterSpacing">.15</item>
    </style>

    <style name="mug">
        <item name="android:paddingHorizontal">3px</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/v202201311917___litera___basic</item>
        <item name="android:textSize">19px</item>
        <item name="android:textColor">#5C5C5C</item>
        <item name="android:textFontWeight" tools:targetApi="p">600</item>
        <item name="android:letterSpacing">.15</item>
    </style>

    <style name="middle">
        <item name="android:paddingHorizontal">3px</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/v202201311917___litera___basic</item>
        <item name="android:textSize">21px</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textFontWeight" tools:targetApi="p">600</item>
        <item name="android:letterSpacing">.15</item>
    </style>


</resources>
