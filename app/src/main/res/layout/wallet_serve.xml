<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:layout_width="match_parent" android:layout_height="match_parent" android:padding="16sp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView android:id="@+id/serveStamp"
                android:layout_width="20dp"
                android:layout_height="20dp" android:layout_toStartOf="@+id/can" android:layout_marginStart="24dp"
                android:layout_centerVertical="true" android:src="@drawable/ic_scan_202301151300"/>

            <ImageView android:id="@+id/can"
                android:layout_width="24dp"
                android:layout_height="24dp" android:layout_marginStart="24sp"
                android:layout_alignParentEnd="true" android:layout_centerVertical="true" android:src="@drawable/ic_bin_202303311456"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginVertical="48sp">

            <ImageView android:id="@+id/put"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true" android:src="@drawable/ic_put_202207071206"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_toEndOf="@+id/put"
                android:orientation="vertical" android:layout_centerVertical="true"
                android:layout_marginStart="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/middle"
                    android:text="DEPOSIT"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" style="@style/mug"
                    android:layout_marginTop="8px"
                    android:textColor="#838383"
                    android:text="1 Oct, 10:01"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_alignParentEnd="true" android:layout_centerVertical="true"
                android:fontFamily="@font/v202201311917___litera___basic"
                android:textColor="#6C6C6C"
                android:text="22.8"/>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="1sp"
            android:fontFamily="@font/v202201311917___litera___basic"
            android:textColor="#000"
            android:textFontWeight="900" android:textSize="12sp"
            android:letterSpacing=".15"
            android:text="INSERT TRANSACTION CODE"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:gravity="center" android:layout_marginVertical="24px">

            <EditText android:id="@+id/slot"
                android:imeOptions="actionDone"
                android:layout_width="match_parent"
                android:layout_height="81px"
                android:paddingVertical="14px"
                android:paddingHorizontal="27px" android:layout_marginRight="64px"
                android:background="@drawable/poll"
                android:inputType="numberDecimal"
                android:fontFamily="@font/v202201311917___litera___basic"
                android:textSize="24px"
                android:letterSpacing=".15"
                android:textColorHint="#838383"/>

            <ImageView
                android:layout_width="21dp"
                android:layout_height="21dp" android:layout_alignParentEnd="true" android:layout_centerVertical="true"
                android:src="@drawable/ic_scan_202301151300"/>

        </RelativeLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>