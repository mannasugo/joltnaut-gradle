<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:layout_width="match_parent" android:layout_height="match_parent" android:padding="16sp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="vertical">

        <TextView android:id="@+id/notate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginBottom="48dp"
            android:fontFamily="@font/v202201311917___litera___basic"
            android:textColor="#000"
            android:textFontWeight="900" android:textSize="14sp"
            android:letterSpacing=".15"
            android:text="ADD FUNDING WALLET"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="1sp"
            android:fontFamily="@font/v202201311917___litera___basic"
            android:textColor="#838383"
            android:textFontWeight="900" android:textSize="12sp"
            android:letterSpacing=".15"
            android:text="*ONLY TRC20 WALLETS (USDT)"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:gravity="center" android:layout_marginVertical="24px">

            <EditText android:id="@+id/slot"
                android:imeOptions="actionDone"
                android:layout_width="match_parent"
                android:layout_height="81px"
                android:paddingVertical="14px"
                android:paddingHorizontal="27px" android:layout_marginRight="64px"
                android:background="@drawable/poll"
                android:inputType="numberDecimal"
                android:fontFamily="@font/v202201311917___litera___basic"
                android:textSize="24px"
                android:letterSpacing=".15"
                android:textColorHint="#838383"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp" android:layout_alignParentEnd="true" android:layout_centerVertical="true"
                android:src="@drawable/ic_max_202306301845"/>

        </RelativeLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>