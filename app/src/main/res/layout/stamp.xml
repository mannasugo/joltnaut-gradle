<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout android:id="@+id/floats"
    android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="16sp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView android:id="@+id/scan"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_centerVertical="true" android:src="@drawable/ic_scan_202301151300"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_toEndOf="@+id/scan" android:layout_centerVertical="true" android:layout_marginStart="12sp"
            android:fontFamily="@font/v202201311917___litera___basic"
            android:textColor="#000"
            android:textFontWeight="900" android:textSize="13sp"
            android:letterSpacing=".15"
            android:text="TRANSACTION CODE:"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentEnd="true" android:layout_centerVertical="true"
            android:fontFamily="@font/v202201311917___litera___basic"
            android:textColor="#000"
            android:textFontWeight="900" android:textSize="13sp"
            android:letterSpacing=".15"
            android:text="202307011238"/>
    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>